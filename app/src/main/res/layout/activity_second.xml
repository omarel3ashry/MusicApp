<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/list2"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:padding="@dimen/songs_padding"
        tools:context="com.example.android.musicapp.SecondActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/prev2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_shapes_h"
            android:layout_weight="1"
            android:contentDescription="@string/prevsong"
            />

        <ImageView
            android:id="@+id/playAndpause2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_shapes_h"
            android:layout_weight="1"
            android:contentDescription="@string/stop_and_play"
            />

        <ImageView
            android:id="@+id/next2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_shapes_h"
            android:layout_weight="1"
            android:contentDescription="@string/nextsong" />
    </LinearLayout>
</LinearLayout>